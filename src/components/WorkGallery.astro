<style>
	.work-section {
		background-color: var(--bg-body);
		padding: 80px 0;
	}

	.work-section h2 {
		text-align: center;
		font-size: 28px;
		font-weight: 700;
		color: var(--text-main);
		margin: 0 0 20px 0;
	}

	.work-description {
		text-align: center;
		font-size: 18px;
		color: var(--text-muted);
		max-width: 700px;
		margin: 0 auto 40px;
		line-height: 1.6;
	}

	.work-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 10px;
	}

	.work-image {
		width: 100%;
		height: 200px;
		object-fit: cover;
		border-radius: 12px;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		cursor: pointer;
	}

	.work-image:hover {
		transform: scale(1.03);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
	}

	@media (min-width: 768px) {
		.work-section {
			padding: 80px 0;
		}

		.work-section h2 {
			font-size: 36px;
			margin-bottom: 24px;
		}

		.work-description {
			font-size: 20px;
			margin-bottom: 50px;
		}

		.work-grid {
			grid-template-columns: repeat(4, 1fr);
			gap: 20px;
		}

		.work-image {
			height: 250px;
		}
	}
</style>

