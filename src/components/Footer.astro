<div id="legalModal" class="legal-modal">
	<div class="legal-modal-content">
		<button class="legal-modal-close" aria-label="Cerrar modal">√ó</button>
		<iframe id="legalModalIframe" class="legal-modal-iframe" title="Contenido legal"></iframe>
	</div>
</div>

<script>
	(function() {
		const modal = document.getElementById('legalModal');
		const modalIframe = document.getElementById('legalModalIframe');
		const closeButton = modal?.querySelector('.legal-modal-close');
		const legalLinks = document.querySelectorAll('.legal-link');

		// Abrir modal al hacer clic en enlaces legales
		legalLinks.forEach(link => {
			link.addEventListener('click', function(e) {
				e.preventDefault();
				const url = this.getAttribute('data-modal-url') || this.getAttribute('href');
				if (modal && modalIframe && url) {
					modalIframe.src = url;
					modal.classList.add('active');
					document.body.style.overflow = 'hidden'; // Prevenir scroll del body
				}
			});
		});

		// Cerrar modal
		function closeModal() {
			if (modal) {
				modal.classList.remove('active');
				document.body.style.overflow = ''; // Restaurar scroll del body
				// Limpiar iframe despu√©s de la animaci√≥n
				setTimeout(() => {
					if (modalIframe) {
						modalIframe.src = '';
					}
				}, 300);
			}
		}

		// Cerrar con bot√≥n
		if (closeButton) {
			closeButton.addEventListener('click', closeModal);
		}

		// Cerrar al hacer clic fuera del contenido
		if (modal) {
			modal.addEventListener('click', function(e) {
				if (e.target === modal) {
					closeModal();
				}
			});
		}

		// Cerrar con tecla ESC
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape' && modal?.classList.contains('active')) {
				closeModal();
			}
		});

		// Escuchar mensaje del iframe para cerrar modal
		window.addEventListener('message', function(e) {
			if (e.data === 'closeLegalModal') {
				closeModal();
			}
		});
	})();
</script>

