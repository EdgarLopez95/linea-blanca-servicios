<style>
	.services-section {
		background-color: var(--bg-section-alt);
		padding: 10px 0;
		position: relative;
	}

	.custom-shape-divider-top {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		overflow: hidden;
		line-height: 0;
		z-index: 0;
	}

	.custom-shape-divider-top svg {
		position: relative;
		display: block;
		width: calc(100% + 1.3px);
		height: 60px;
	}

	.shape-fill {
		fill: var(--bg-body);
	}

	.services-section .container {
		position: relative;
		z-index: 1;
		padding-top: 40px;
	}

	.services-header {
		text-align: center;
		margin-bottom: 50px;
	}

	.services-header h2 {
		color: var(--text-main);
		font-size: 32px;
		font-weight: 700;
		margin-bottom: 16px;
	}

	.services-header p {
		color: var(--text-muted);
		font-size: 18px;
		line-height: 1.6;
		max-width: 600px;
		margin: 0 auto;
	}

	.bento-grid {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.bento-grid article {
		background-color: var(--bg-card);
		border-radius: 24px;
		padding: 40px;
		box-shadow: 0 4px 20px var(--shadow-color);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		position: relative;
	}

	.bento-grid article:hover {
		transform: translateY(-8px);
		box-shadow: 0 12px 30px var(--shadow-color);
	}

	.card-content {
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.card-icon {
		width: 40px;
		height: 40px;
		color: var(--color-accent);
		flex-shrink: 0;
	}

	.bento-grid article h3 {
		color: var(--text-main);
		font-size: 24px;
		font-weight: 700;
		margin-bottom: 12px;
	}

	.bento-grid article p {
		color: var(--text-muted);
		font-size: 16px;
		line-height: 1.6;
		margin-bottom: 20px;
	}

	.card-link {
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.3s ease;
	}

	.card-link:hover {
		color: var(--text-main);
	}

	.card-parts {
		border: 2px solid var(--color-accent);
		background-color: rgba(59, 171, 250, 0.1);
	}

	.card-parts h3 {
		color: var(--text-main);
	}

	.badge-new {
		position: absolute;
		top: 20px;
		right: 20px;
		background: var(--color-accent);
		color: #ffffff;
		padding: 6px 12px;
		border-radius: 20px;
		font-size: 12px;
		font-weight: 700;
	}

	@media (min-width: 768px) {
		.services-section {
			padding: 10px 0 80px;
		}

		.services-section .container {
			padding-top: 60px;
		}
	}

	@media (min-width: 1024px) {
		.custom-shape-divider-top svg {
			height: 120px;
		}

		.bento-grid {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 24px;
		}
	}
</style>

